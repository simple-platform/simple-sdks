{
  "name": "@simpleplatform/sdk",
  "version": "1.0.0",
  "description": "Simple Platform Typescript SDK",
  "license": "Apache-2.0",
  "homepage": "https://docs.simple.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/simple-platform/simple-sdks.git",
    "directory": "sdks/ts"
  },
  "bugs": {
    "url": "https://github.com/simple-platform/simple-sdks/issues"
  },
  "keywords": [
    "simple",
    "simple-platform",
    "simple-sdk",
    "simple-platform-sdk",
    "simple-ts-sdk",
    "simple-platform-ts-sdk"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ai": {
      "types": "./dist/ai.d.ts",
      "default": "./dist/ai.js"
    },
    "./graphql": {
      "types": "./dist/graphql.d.ts",
      "default": "./dist/graphql.js"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "default": "./dist/http.js"
    },
    "./settings": {
      "types": "./dist/settings.d.ts",
      "default": "./dist/settings.js"
    },
    "./security": {
      "types": "./dist/security.d.ts",
      "default": "./dist/security.js"
    },
    "./host": {
      "types": "./dist/host.d.ts",
      "default": "./dist/host.js"
    },
    "./worker": "./dist/worker-override.js",
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "simple-sdk-build": "./dist/build.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && cp src/worker-override.js dist/ && cp cli/build.js dist/",
    "prepare": "pnpm run build"
  },
  "dependencies": {
    "esbuild": "0.27.3"
  },
  "devDependencies": {
    "@types/node": "25.2.0",
    "typescript": "5.9.3"
  }
}
